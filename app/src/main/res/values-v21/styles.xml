<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/artist_image_transition
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/artist_image_transition
        </item>
        <item name="android:windowSharedElementReenterTransition">
            @transition/artist_image_transition
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/artist_image_transition
        </item>

    </style>

    <style name="ArtistItem">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
