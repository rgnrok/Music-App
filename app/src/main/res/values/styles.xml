<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentTransparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="SubText">
        <item name="android:textSize">@dimen/sub_text_size</item>
        <item name="android:textColor">@color/subText</item>
    </style>

    <style name="ArtistItem">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ArtistImageTumb">
        <item name="android:layout_width">@dimen/image_tumb_width</item>
        <item name="android:layout_height">@dimen/image_tumb_height</item>
        <item name="android:layout_marginRight">@dimen/image_margin</item>
    </style>


    <style name="ArtistTitle" parent="Text">
        <item name="android:textSize">@dimen/artist_title_size</item>
        <item name="android:layout_marginTop">@dimen/artist_title_margin</item>
    </style>

    <style name="ArtistSubText" parent="SubText">
        <item name="android:textSize">@dimen/artist_sub_text_size</item>
        <item name="android:layout_marginTop">@dimen/artist_sub_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/artist_sub_text_margin</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleMarginBottom">@dimen/expanded_title_margin_bottom</item>
        <item name="expandedTitleMarginEnd">@dimen/expanded_title_margin_end</item>
        <item name="expandedTitleMarginStart">@dimen/expanded_title_margin_start</item>
    </style>

    <style name="ArtistDetailImage">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
    </style>
    
    <style name="ArtistDetailImageBack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_detail_back_height</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:background">@drawable/scrim_bottom</item>
    </style>

    <style name="FloatButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_gravity">center_vertical|start</item>
    </style>

    <style name="EmptySearch">
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
